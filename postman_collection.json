{
	"info": {
		"_postman_id": "social-media-feed-backend",
		"name": "Social Media Feed Backend",
		"description": "GraphQL API collection for the Social Media Feed Backend project.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Obtain Token",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "mutation TokenAuth($username: String!, $password: String!) {\r\n  tokenAuth(username: $username, password: $password) {\r\n    token\r\n  }\r\n}",
								"variables": "{\r\n  \"username\": \"admin\",\r\n  \"password\": \"admin\"\r\n}"
							}
						},
						"url": {
							"raw": "http://localhost:8000/graphql/",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8000",
							"path": [
								"graphql",
								""
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Posts",
			"item": [
				{
					"name": "Get All Posts",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "query AllPosts {\r\n  allPosts {\r\n    edges {\r\n      node {\r\n        id\r\n        content\r\n        author {\r\n          username\r\n        }\r\n        likeCount\r\n        commentCount\r\n        createdAt\r\n      }\r\n    }\r\n  }\r\n}",
								"variables": ""
							}
						},
						"url": {
							"raw": "http://localhost:8000/graphql/",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8000",
							"path": [
								"graphql",
								""
							]
						}
					},
					"response": []
				},
				{
					"name": "Create Post",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "JWT {{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "mutation CreatePost($content: String!) {\r\n  createPost(content: $content) {\r\n    post {\r\n      id\r\n      content\r\n      createdAt\r\n    }\r\n  }\r\n}",
								"variables": "{\r\n  \"content\": \"Hello from Postman!\"\r\n}"
							}
						},
						"url": {
							"raw": "http://localhost:8000/graphql/",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8000",
							"path": [
								"graphql",
								""
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Interactions",
			"item": [
				{
					"name": "Like Post",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "JWT {{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "mutation LikePost($postId: ID!) {\r\n  likePost(postId: $postId) {\r\n    like {\r\n      id\r\n      post {\r\n        likeCount\r\n      }\r\n    }\r\n  }\r\n}",
								"variables": "{\r\n  \"postId\": \"UG9zdFR5cGU6MQ==\"\r\n}"
							}
						},
						"url": {
							"raw": "http://localhost:8000/graphql/",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8000",
							"path": [
								"graphql",
								""
							]
						}
					},
					"response": []
				}
			]
		}
	]
}
